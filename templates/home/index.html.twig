        }

        .testimonial-author {
            display: flex;
            align-items: center;
        }

        .author-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 1rem;
            background-size: cover;
            background-position: center;
        }

        .author-info h4 {
            margin-bottom: 0.2rem;
        }

        .author-info p {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .footer {
            background: var(--dark);
            color: white;
            padding: 4rem 10% 2rem;
            background-image: linear-gradient(to right, #3a3a3a, #4a4a4a, #5a5a5a);
