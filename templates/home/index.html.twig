<script>
    // Animation simple au scroll
    document.addEventListener('DOMContentLoaded', function() {
        const featureCards = document.querySelectorAll('.feature-card');
        const bookCards = document.querySelectorAll('.book-card');
        let cartCount = 0;
        const cartBadge = document.querySelector('.cart-badge');
        const buyButtons = document.querySelectorAll('.book-card .btn-primary');

        // Animation simple au survol
        featureCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-15px)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(-10px)';
            });
        });

        // Animation pour la nav au scroll
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('.nav');
            if (window.scrollY > 100) {
                nav.style.background = 'rgba(166, 124, 82, 0.8)';
                nav.style.padding = '1rem 3rem';
                nav.style.boxShadow = '0 5px 15px rgba(58, 58, 58, 0.2)';
            } else {
                nav.style.background = 'rgba(58, 58, 58, 0.2)';
                nav.style.backdropFilter = 'blur(5px)';
                nav.style.padding = '1.8rem 3rem';
                nav.style.boxShadow = 'none';
            }
        });
        
        // Gestion du panier
        buyButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                cartCount++;
                cartBadge.textContent = cartCount;
                
                // Animation d'ajout au panier
                const bookCard = this.closest('.book-card');
                bookCard.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    bookCard.style.transform = 'scale(1)';
                }, 200);
                
                // Notification d'ajout au panier
                alert('Produit ajouté au panier !');
            });
        });
    });
</script>
