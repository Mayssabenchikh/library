{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription - Biblioth√®que Municipale{% endblock %}

{% block body %}
<style>
/* Variables */
:root {
  --primary-color: #8B4513;         /* Marron bois√© */
  --primary-light: #A0522D;         /* Marron plus clair */
  --secondary-color: #F5F5DC;       /* Beige */
  --accent-color: #D2691E;          /* Accent chaleureux */
  --accent-secondary: #6B8E23;      /* Vert olive */
  --accent-tertiary: #4682B4;       /* Bleu acier */
  --text-color: #2D2926;            /* Texte presque noir */
  --text-light: #5A5A5A;            /* Texte gris */
  --white: #FFF;                    /* Blanc */
  --cream: #FFFAED;                 /* Cr√®me */
  --parchment: #F4ECD8;             /* Parchemin */
  --border-radius: 8px;
  --border-radius-large: 15px;
  --box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  --font-primary: 'Playfair Display', Georgia, serif;
  --font-secondary: 'Montserrat', sans-serif;
}

/* Importation des polices */
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Montserrat:wght@300;400;500;600&display=swap');

/* Animation Keyframes */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes floatIn {
  0% { opacity: 0; transform: translateY(10px); }
  100% { opacity: 1; transform: translateY(0); }
}

@keyframes borderGlow {
  0% { box-shadow: 0 0 0 rgba(210, 105, 30, 0); }
  50% { box-shadow: 0 0 10px rgba(210, 105, 30, 0.5); }
  100% { box-shadow: 0 0 0 rgba(210, 105, 30, 0); }
}

@keyframes pageFlip {
  0% { transform: rotateY(0deg); }
  100% { transform: rotateY(-2deg); }
}

/* Reset et base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: var(--font-secondary);
  color: var(--text-color);
  background-color: var(--cream);
  line-height: 1.6;
  background-image: 
    linear-gradient(rgba(255, 250, 237, 0.9), rgba(255, 250, 237, 0.9)),
    url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23d2691e' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
}

a {
  text-decoration: none;
  color: var(--accent-color);
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
}

a:hover {
  color: var(--primary-color);
}

a::after {
  content: '';
  position: absolute;
  width: 0;
  height: 1px;
  bottom: -2px;
  left: 0;
  background-color: var(--primary-color);
  transition: width 0.3s ease;
}

a:hover::after {
  width: 100%;
}

/* Header et Navigation */
.header-wrapper {
  background-color: var(--primary-color);
  background-image: linear-gradient(to right, var(--primary-color), var(--primary-light));
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);
}

.bibliotheque-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 5%;
  max-width: 1400px;
  margin: 0 auto;
}

.logo {
  font-family: var(--font-primary);
  font-size: 28px;
  font-weight: 700;
  color: var(--white);
  letter-spacing: 1px;
  display: flex;
  align-items: center;
}

.logo::before {
  content: "üìö";
  margin-right: 10px;
  font-size: 24px;
}

.nav-menu {
  display: flex;
  gap: 30px;
}

.nav-item {
  color: var(--white);
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s ease;
  padding: 5px 10px;
  position: relative;
}

.nav-item::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background-color: var(--white);
  transition: width 0.3s ease;
}

.nav-item:hover::after {
  width: 80%;
}

.user-actions {
  display: flex;
  align-items: center;
  gap: 15px;
}

.cart-icon {
  position: relative;
  color: var(--white);
  font-size: 20px;
}

.cart-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background-color: var(--accent-secondary);
  color: white;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Section d'inscription */
.register-section {
  padding: 8rem 0 5rem !important;
  background-color: var(--cream);
  min-height: 100vh;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* √âl√©ments d√©coratifs en arri√®re-plan */
.register-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%238b4513' fill-opacity='0.03' fill-rule='evenodd'/%3E%3C/svg%3E");
  z-index: -1;
}

.register-section::after {
  content: "";
  position: absolute;
  width: 50%;
  height: 100%;
  top: 0;
  right: -25%;
  background-image: url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23d2691e' fill-opacity='0.05' fill-rule='evenodd'%3E%3Ccircle cx='3' cy='3' r='3'/%3E%3Ccircle cx='13' cy='13' r='3'/%3E%3C/g%3E%3C/svg%3E");
  transform: rotate(10deg);
  z-index: -1;
}

.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
  position: relative;
}

.row {
  display: flex;
  flex-wrap: wrap;
  margin-right: -15px;
  margin-left: -15px;
}

.justify-content-center {
  justify-content: center;
}

.col-md-6 {
  flex: 0 0 100%;
  max-width: 100%;
  padding-right: 15px;
  padding-left: 15px;
  position: relative;
  z-index: 1;
}

@media (min-width: 768px) {
  .col-md-6 {
    flex: 0 0 50%;
    max-width: 50%;
  }
}

/* √âl√©ments d√©coratifs pour la carte */
.book-spine {
  position: absolute;
  width: 30px;
  height: 80%;
  left: -15px;
  top: 10%;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
  box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
  border-radius: 3px 0 0 3px;
  z-index: -1;
  display: none;
}

@media (min-width: 768px) {
  .book-spine {
    display: block;
  }
}

.card {
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 0;
  word-wrap: break-word;
  background-color: var(--parchment);
  background-clip: border-box;
  border: none;
  border-radius: var(--border-radius-large);
  overflow: hidden;
  transform-style: preserve-3d;
  perspective: 1000px;
  animation: pageFlip 0.5s ease-out forwards;
  box-shadow: var(--box-shadow);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='6' height='6' viewBox='0 0 6 6' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%238b4513' fill-opacity='0.05' fill-rule='evenodd'%3E%3Cpath d='M5 0h1L0 5v1H5V0zm1 5v1H5v-1H0v-1h5V0h1v5z'/%3E%3C/g%3E%3C/svg%3E");
  opacity: 0.7;
  z-index: -1;
}

.shadow {
  box-shadow: var(--box-shadow) !important;
}

.card-header {
  padding: 1.75rem 1.5rem 1.25rem;
  margin-bottom: 0;
  border-bottom: 1px solid rgba(139, 69, 19, 0.2);
  position: relative;
}

.card-header::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 3px;
  background: linear-gradient(90deg, 
    var(--primary-color) 0%, 
    var(--accent-color) 35%, 
    var(--accent-secondary) 65%, 
    var(--accent-tertiary) 100%);
}

.bg-white {
  background-color: rgba(255, 255, 255, 0.8) !important;
}

.text-center {
  text-align: center !important;
}

.py-3 {
  padding-top: 1rem !important;
  padding-bottom: 1rem !important;
}

.card-body {
  flex: 1 1 auto;
  min-height: 1px;
  padding: 2rem;
  animation: fadeIn 0.5s ease-out forwards;
}

.p-4 {
  padding: 1.5rem !important;
}

h2 {
  font-family: var(--font-primary);
  font-size: 2rem;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 1rem;
  text-transform: none;
  letter-spacing: 0.5px;
  position: relative;
  display: inline-block;
}

h2::after {
  content: '';
  position: absolute;
  width: 60%;
  height: 2px;
  bottom: -5px;
  left: 20%;
  background-color: var(--accent-color);
}

.mb-0 {
  margin-bottom: 0 !important;
}

.mb-3 {
  margin-bottom: 1.5rem !important;
}

/* Formulaires avec style cr√©atif */
.form-label {
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: var(--text-color);
  font-size: 0.9rem;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  display: flex;
  align-items: center;
}

.form-label::before {
  content: "‚ú¶";
  margin-right: 8px;
  color: var(--accent-color);
  font-size: 0.8rem;
}

.form-control {
  display: block;
  width: 100%;
  padding: 0.95rem 1.2rem;
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  color: var(--text-color);
  background-color: rgba(255, 255, 255, 0.9);
  background-clip: padding-box;
  border: 2px solid rgba(139, 69, 19, 0.2);
  border-radius: var(--border-radius);
  transition: all 0.25s ease-in-out;
  box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
}

.form-control:focus {
  border-color: var(--accent-color);
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(210, 105, 30, 0.2);
  animation: borderGlow 2s infinite;
}

.form-control::placeholder {
  color: #aaa;
  opacity: 0.7;
}

.form-check {
  display: block;
  min-height: 1.5rem;
  padding-left: 2em;
  margin-bottom: 0.125rem;
}

.form-check-input {
  width: 1.2em;
  height: 1.2em;
  margin-top: 0.25em;
  vertical-align: top;
  background-color: var(--white);
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  border: 2px solid rgba(139, 69, 19, 0.3);
  appearance: none;
  color-adjust: exact;
  margin-left: -2em;
  transition: all 0.2s ease-in-out;
}

.form-check-input[type="checkbox"] {
  border-radius: 0.25em;
}

.form-check-input:checked {
  background-color: var(--accent-color);
  border-color: var(--accent-color);
  background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 10l3 3l6-6'/%3e%3c/svg%3e");
}

.form-check-input:focus {
  border-color: var(--accent-color);
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(210, 105, 30, 0.2);
}

.form-check-label {
  margin-bottom: 0;
  cursor: pointer;
}

/* Bouton cr√©atif */
.btn {
  display: inline-block;
  font-weight: 600;
  line-height: 1.5;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;
  padding: 0.95rem 1.8rem;
  font-size: 1.05rem;
  border-radius: var(--border-radius);
  transition: all 0.3s ease-in-out;
  text-decoration: none;
  letter-spacing: 0.5px;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0.2));
  transform: translateX(-100%);
  transition: transform 0.6s ease-in-out;
  z-index: -1;
}

.btn:hover::before {
  transform: translateX(0);
}

.btn-primary {
  color: var(--white);
  background: linear-gradient(to right, var(--primary-color), var(--accent-color));
  border: none;
  box-shadow: 0 4px 15px rgba(210, 105, 30, 0.3);
  transform: translateY(0);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.btn-primary:hover {
  background: linear-gradient(to right, var(--accent-color), var(--primary-color));
  transform: translateY(-3px);
  box-shadow: 0 6px 18px rgba(210, 105, 30, 0.4);
}

.btn-primary:active {
  transform: translateY(1px);
  box-shadow: 0 2px 10px rgba(210, 105, 30, 0.4);
}

.d-grid {
  display: grid !important;
}

.gap-2 {
  gap: 0.5rem !important;
}

.mt-3 {
  margin-top: 1.5rem !important;
}

/* Lien de connexion stylis√© */
.mt-3.text-center p {
  font-size: 0.95rem;
  color: var(--text-light);
  margin-top: 1.5rem;
  animation: floatIn 0.8s ease-out forwards;
  animation-delay: 0.5s;
  opacity: 0;
}

.mt-3.text-center p a {
  color: var(--accent-color);
  font-weight: 600;
  position: relative;
  padding-bottom: 2px;
}

.mt-3.text-center p a::after {
  height: 2px;
  background-color: var(--accent-color);
  bottom: -1px;
}

/* Validation des formulaires */
.invalid-feedback {
  display: block;
  width: 100%;
  margin-top: 0.5rem;
  font-size: 0.875em;
  color: #c74a47;
  animation: fadeIn 0.3s ease-out forwards;
}

/* Petites d√©corations suppl√©mentaires */
.card::after {
  content: 'üìñ';
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 24px;
  opacity: 0.7;
}

/* Animations pour les champs de formulaire */
.card-body > div {
  animation: fadeIn 0.5s ease-out forwards;
  animation-delay: calc(var(--animation-order) * 0.1s);
  opacity: 0;
}

.card-body > div:nth-child(1) { --animation-order: 1; }
.card-body > div:nth-child(2) { --animation-order: 2; }
.card-body > div:nth-child(3) { --animation-order: 3; }
.card-body > div:nth-child(4) { --animation-order: 4; }
.card-body > div:nth-child(5) { --animation-order: 5; }
.card-body > div:nth-child(6) { --animation-order: 6; }

/* Media Queries */
@media (max-width: 768px) {
  .register-section {
    padding: 6rem 0 3rem !important;
  }
  
  .card {
    animation: none;
  }
  
  h2 {
    font-size: 1.75rem;
  }
  
  .form-label::before {
    display: none;
  }
}
</style>
<section class="register-section" style="padding: 5rem 0; background-color: var(--beige-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-white text-center py-3">
                        <h2 class="mb-0">Cr√©er un compte</h2>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(registrationForm) }}
                            {# Champ Nom #}
                            <div class="mb-3">
                                {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.nom) }}
                            </div>

                            {# Champ Email #}
                            <div class="mb-3">
                                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>

                            {# Champ T√©l√©phone #}
                            <div class="mb-3">
                                {{ form_label(registrationForm.telephone, 'T√©l√©phone', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.telephone) }}
                            </div>

                            {# Champ Mot de passe #}
                            <div class="mb-3">
                                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>

                            {# Conditions d'utilisation (si d√©fini) #}
                            {% if registrationForm.agreeTerms is defined %}
                            <div class="mb-3 form-check">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'class': 'form-check-label'}}) }}
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                            {% endif %}

                            {# Bouton d'inscription #}
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">S'inscrire</button>
                            </div>
                        {{ form_end(registrationForm) }}
                        
                        {# Lien vers la page de connexion #}
                        <div class="mt-3 text-center">
                            <p>Vous avez d√©j√† un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}