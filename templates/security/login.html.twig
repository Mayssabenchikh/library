{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion - Bibliothèque Municipale{% endblock %}

{% block body %}
<section class="login-section" style="padding: 5rem 0; background-color: var(--beige-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-white text-center py-3">
                        <h2 class="mb-0">Connexion</h2>
                    </div>
                    <div class="card-body p-4">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form method="post">
                            {% if app.user %}
                                <div class="mb-3 text-center">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            
                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="mb-3 form-check">
                                <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="submit">Se connecter</button>
                            </div>
                        </form>
                        
                        <div class="mt-3 text-center">
                            <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}