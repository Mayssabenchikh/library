<!-- Header Section -->
<header class="header">
    <div class="hero-content">
        <h1>Fiche d'auteur</h1>
        <p>D√©couvrez les d√©tails sur cet auteur et ses ≈ìuvres</p>
    </div>
</header>

<!-- Author Section -->
<section class="author-section">
    <div class="author-container">
        <div class="author-header">
            <h1>{{ auteur.nom }}</h1>
        </div>
        
        <div class="author-card">
            <div class="author-info">
                <div class="info-label">Identifiant</div>
                <div class="info-value">{{ auteur.id }}</div>
                
                <div class="info-label">Nom complet</div>
                <div class="info-value">{{ auteur.nom }}</div>
                
                <div class="info-label">Date de naissance</div>
                <div class="info-value">{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('d M Y', 'Europe/Paris') : 'Non renseign√©e' }}</div>
            </div>
            
            <div class="biography-section">
                <div class="info-label">Biographie</div>
                <div class="biography-content">{{ auteur.biographie }}</div>
            </div>
        </div>
        
        <a href="{{ path('app_auteur_index') }}" class="action-btn">
            <i class="fas fa-arrow-left"></i>
            Retour au catalogue
        </a>
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <div class="footer-bottom">
        <p>&copy; {{ "now"|date("Y") }} Biblioth√®que Municipale - Tous droits r√©serv√©s</p>
    </div>
</footer>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation de la navbar au scroll
    window.addEventListener('scroll', function () {
        const nav = document.querySelector('.nav');
        
        if (window.scrollY > 100) {
            nav.style.background = 'rgba(166, 124, 82, 0.8)';
            nav.style.padding = '1rem 3rem';
            nav.style.boxShadow = '0 5px 15px rgba(58, 58, 58, 0.2)';
        } else {
            nav.style.background = 'rgba(58, 58, 58, 0.2)';
            nav.style.backdropFilter = 'blur(5px)';
            nav.style.padding = '1.8rem 3rem';
            nav.style.boxShadow = 'none';
        }
    });

    // Gestion du menu d√©roulant sur mobile
    const userDropdown = document.querySelector('.user-dropdown');
    if (userDropdown) {
        userDropdown.addEventListener('click', function () {
            const dropdownMenu = this.querySelector('.dropdown-menu');
            dropdownMenu.style.opacity = dropdownMenu.style.opacity === '1' ? '0' : '1';
            dropdownMenu.style.visibility = dropdownMenu.style.visibility === 'visible' ? 'hidden' : 'visible';
            dropdownMenu.style.transform = dropdownMenu.style.transform === 'translateY(0px)' ? 'translateY(10px)' : 'translateY(0px)';
        });
    }
    
    // Animation d'entr√©e pour la carte auteur
    const authorCard = document.querySelector('.author-card');
    authorCard.style.opacity = '0';
    authorCard.style.transform = 'translateY(20px)';
    authorCard.style.transition = 'all 0.5s ease';
    
    setTimeout(() => {
        authorCard.style.opacity = '1';
        authorCard.style.transform = 'translateY(0)';
    }, 300);
});
</script>
{% endblock %}