{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <h1>Genre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Livres</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.nom }}</td>
                <td>{{ genre.description }}</td>
                <td>
                    {% if genre.livre is not empty %}
                        <ul>
                        {% for livre in genre.livre %}
                            <li>{{ livre.titre }}</li>
                        {% endfor %}
                        </ul>
                    {% else %}
                        Aucun livre
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_genre_show', {'id': genre.id}) }}">show</a>
                    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_genre_new') }}">Create new</a>
{% endblock %}