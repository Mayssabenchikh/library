    .library-date {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }
</style>
{% endblock %}

{% block body %}
<nav class="nav">
			<a href="#" class="logo">Biblio<span>thèque</span>
				<i class="fas fa-book" style="font-size: 0.9rem;"></i>
			</a>

			<div class="nav-links">
				<a href="#">Accueil</a>
				<a href="/auteur">Auteurs</a>
				<a href="/genre">Genres</a>
			</div>

			<div class="cta-buttons">

				{% if app.user %}
					<div class="user-dropdown">
						<span class="user-name">{{ app.user.nom }}
							<i class="fas fa-chevron-down"></i>
						</span>
						<div class="dropdown-menu">
							<a href="/account">
								<i class="fas fa-user"></i>
								Mon compte</a>
							<a href="{{ path('app_logout') }}">
								<i class="fas fa-sign-out-alt"></i>
								Déconnexion</a>
						</div>
					</div>
				{% else %}
					<a href="/login" class="btn btn-outline">Connexion</a>
					<a href="/register" class="btn btn-primary">Inscription</a>
				{% endif %}
			</div>
		</nav>
<div class="library-container">
    <h1 class="library-heading">Registre des Emprunts</h1>

    <table class="library-table">
        <thead>
            <tr>
                <th>Date d'emprunt</th>
                <th>Date de retour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td class="library-date">{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="library-date">{{ emprunt.dateRetour ? emprunt.dateRetour|date('Y-m-d H:i:s') : '' }}</td>
                <td class="action-links">
                    <a href="{{ path('app_emprunt_show', {'id': emprunt.id}) }}" class="library-btn view">Consulter</a>
                    <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}" class="library-btn edit">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="library-no-records">Aucun emprunt trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    
    
</div>
{% endblock %}